@model WebBerberUygulamasi.Models.Shop

@{
    ViewData["Title"] = "Salonu Düzenle";
}
<div class="row">
    <h1>@TempData["msj"]</h1>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ShopID" />
            <div class="form-group">
                <label asp-for="ShopOpening" class="control-label"></label>
                <input asp-for="ShopOpening" class="form-control" />
                <span asp-validation-for="ShopOpening" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShopClosing" class="control-label"></label>
                <input asp-for="ShopClosing" class="form-control" />
                <span asp-validation-for="ShopClosing" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Düzenlemekten vazgeç.</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
