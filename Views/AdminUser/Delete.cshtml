@model WebBerberUygulamasi.Models.User

@{
    ViewData["Title"] = "Kullanıcı Sil";
}

<h3>Bu kullanıcı silmeye emin misin?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserSurname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserSurname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserEmail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserEmail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserPhone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserPhone)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="UserID" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Kullanıcı listesine geri dön</a>
    </form>
</div>
